@model IEnumerable<Pais>

@{
    ViewData["Title"] = "Países";
}

<div class="card">
    
    <div class="card-header">
        <h5 class="card-title">Países</h5>
        <div class="d-flex justify-content-between">
            <div class="datatable-search d-inline">
                <input class="form-control border-secondary" placeholder="buscar..." type="search" />
            </div>
            <div class="d-flex ">
                <button type="button" class="d-flex align-items-center btn btn-outline-primary" onclick="location.href='@Url.Action("CrearPais", "Paises")'">
                    <i class="bi bi-file-plus"></i>
                    <span class="mx-1 d-none d-md-block">Agregar</span>
                </button>
                <button type="button" class="mx-1 d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-pdf"></i>
                    <span class="mx-1 d-none d-md-block ">PDF</span>
                </button>
                <button type="button" class="d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-excel"></i>
                    <span class="mx-1 d-none d-md-block">Excel</span>
                </button>
            </div>
        </div>
    </div>

    <div class="card-body ">
        
        <div class="table-responsive">
            <table id="example" class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Pais</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pais in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="EditarPais" asp-route-paisId="@pais.PaisId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="EliminarPais" asp-route-paisId="@pais.PaisId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td>
                                @pais.PaisNombre
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" disabled checked="@pais.PaisActivo">
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>