@model Pais

@{
    ViewData["Title"] = "Crear País";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Pais</h3>

        <form class="row g-3" asp-action="CrearPais">
            <div class="col-12">
                <label for="paisNombre" class="form-label">Nombre del País</label>
                <input type="text" placeholder="" class="form-control" id="paisNombre" asp-for="DivisionPoliticaPaisNombre">
            </div>
            <div class="col-12">
                <div class="form-check">
                    <label class="form-check-label" for="activoCheck">Activo</label>
                    <input class="form-check-input" type="checkbox" id="activoCheck" asp-for="DivisionPoliticaPaisActivo">
                </div>

@*                <div class="form-check form-switch">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Activo</label>
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                </div>*@
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <button type="reset" class="btn btn-secondary">Limpiar</button>
            </div>
        </form>
    </div>
</div>