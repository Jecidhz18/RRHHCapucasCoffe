@model Pais

@{
    ViewData["Title"] = "Crear País";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Pais</h3>

        <form class="row g-3" asp-action="CrearPais">
            <div class="col-12">
                <label asp-for="DivisionPoliticaPaisNombre" class="form-label"></label>
                <input asp-for="DivisionPoliticaPaisNombre"  type="text" placeholder="" class="form-control">
                <span asp-validation-for="DivisionPoliticaPaisNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                @*<div class="form-check">
                    <label asp-for="DivisionPoliticaPaisActivo" class="form-check-label"></label>
                    <input asp-for="DivisionPoliticaPaisActivo" type="checkbox"  class="form-check-input">
                </div>*@

                <div class="form-check form-switch">
                    <label asp-for="DivisionPoliticaPaisActivo" class="form-check-label"></label>
                    <input asp-for="DivisionPoliticaPaisActivo" class="form-check-input">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <button type="reset" class="btn btn-secondary">Limpiar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}