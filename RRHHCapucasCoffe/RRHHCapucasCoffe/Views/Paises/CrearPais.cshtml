@model RRHHCapucasCoffe.Entities.Pais

@{
    ViewData["Title"] = "Crear País";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
    @*<i class="bi bi-exclamation-octagon flex"></i>*@
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Pais</h3>

        <form id="miFormulario" class="row g-3" asp-action="CrearPais">
            <div class="col-12">
                <label asp-for="PaisNombre" class="form-label"></label>
                <input asp-for="PaisNombre"  type="text" placeholder="" class="form-control required">
                <span asp-validation-for="PaisNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="PaisActivo" class="form-check-label"></label>
                    <input asp-for="PaisActivo" class="form-check-input" type="checkbox" checked>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Pais", "Paises")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
<script>
    $(document).ready(function () {
        $("#miFormulario").validate({
            rules: {
                PaisNombre: {
                    required: true
                }
            }
        });

        $("#miFormulario").submit(function (event) {
            if (!$(this).valid()) {
                // Mostrar los errores de validación si el formulario no es válido
                $(this).find(".text-danger").each(function () {
                    $(this).text($(this).data("msgRequired"));
                });

                return false; // Evitar que se envíe el formulario
            }
        });
    });
</script>