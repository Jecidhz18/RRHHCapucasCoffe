@model Pais

@{
    ViewData["Title"] = "Eliminar Pais";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title ">Eliminar Pais: @Model.PaisNombre</h3>

        <form class="row g-3" asp-action="EliminarPaisSelect">
            <input type="hidden" asp-for="PaisId" />

            <span class="text-warning">Confirme la eliminacion de los datos.</span>

            <div class="col-12">
                <label asp-for="PaisNombre" class="form-label"></label>
                <input asp-for="PaisNombre" type="text" class="form-control" disabled>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="PaisActivo" class="form-check-label"></label>
                    <input asp-for="PaisActivo" class="form-check-input" type="checkbox" checked="@Model.PaisActivo" disabled>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Pais", "Paises")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}