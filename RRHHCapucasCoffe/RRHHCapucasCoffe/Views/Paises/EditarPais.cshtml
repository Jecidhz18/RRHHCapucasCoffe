@model RRHHCapucasCoffe.Models.Paises.Pais

@{
    ViewData["Title"] = "Editar País";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
    @*<i class="bi bi-exclamation-octagon flex"></i>*@
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Editar Pais: @Model.PaisNombre</h3>

        <form class="row g-3" asp-action="EditarPais">
            <input type="hidden" asp-for="PaisId"/>
            <div class="col-12">
                <label asp-for="PaisNombre" class="form-label"></label>
                <input asp-for="PaisNombre" type="text" class="form-control">
                <span asp-validation-for="PaisNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="PaisActivo" class="form-check-label"></label>
                    <input asp-for="PaisActivo" class="form-check-input" type="checkbox" checked="@Model.PaisActivo">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Pais", "Paises")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}