<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RRHHCapucasCoffe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RRHHCapucasCoffe.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/vendor/bootstrap-icons/bootstrap-icons.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a class="logo d-flex align-items-center" asp-area="" asp-controller="home" asp-action="index">
                <img src="assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">CAPUCAS COFFE</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="/img/3135715.png" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">Administrador</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Administrador</h6>
                            <span>Administrador</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                <i class="bi bi-gear"></i>
                                <span>Configurar</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="#">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesión</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->
            </ul>
        </nav>
    </header>

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <!-- Home Nav -->
                <a class="nav-link collapsed" asp-area="" asp-controller="home" asp-action="index">
                    <i class="bi bi-grid"></i>
                    <span>Inicio</span>
                </a>
            </li><!-- End Home Nav -->
            <li class="nav-item">
                <!-- Planilla Nav -->
                <a class="nav-link collapsed" href="">
                    <i class="bi bi-file-ruled"></i>
                    <span>Planillas</span>
                </a>
            </li><!-- End Planilla Nav -->
            <li class="nav-item">
                <!-- Recursos Humanos Nav-->
                <a class="nav-link collapsed" data-bs-target="#human-nav" data-bs-toggle="collapse" href="">
                    <i class="bi bi-person-lines-fill"></i><span>Recursos Humanos</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>

                <ul id="human-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Agencia</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Deducciones Aplicadas</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Deducciones Grupales</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Remuneraciones Planificadas</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Recursos Humanos Nav-->
            <li class="nav-item">
                <!-- Vacaciones Nav-->
                <a class="nav-link collapsed" data-bs-target="#vacation-nav" data-bs-toggle="collapse" href="">
                    <i class="bi bi-journal-text"></i><span>Vacaciones</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="vacation-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Vacaciones de Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="bi bi-circle"></i><span>Registro de Vacaciones</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Vacaciones -->

            <li class="nav-heading">System</li>
        </ul>
    </aside><!-- End Sidebar-->
    
    <main id="main" class="main">
            @RenderBody()
    </main>

    @*    <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - RRHHCapucasCoffe - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>