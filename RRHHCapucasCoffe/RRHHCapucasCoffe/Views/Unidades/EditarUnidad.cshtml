@model RRHHCapucasCoffe.Models.Unidades.Unidad
@{
    ViewData["Title"] = "Editar Unidad"; 
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
@*<i class="bi bi-exclamation-octagon flex"></i>*@
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Editar Colegio Profesional: @Model.UnidadDescripcion</h3>

        <form class="row g-3" asp-action="EditarUnidad">
            <input type="hidden" asp-for="UnidadId" />
            <div class="col-12">
                <label asp-for="UnidadDescripcion" class="form-label"></label>
                <input asp-for="UnidadDescripcion" type="text" placeholder="" class="form-control">
                <span asp-validation-for="UnidadDescripcion" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="UnidadActiva" class="form-check-label"></label>
                    <input asp-for="UnidadActiva" class="form-check-input" type="checkbox">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" title="Confirmar">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Unidad", "Unidades")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
