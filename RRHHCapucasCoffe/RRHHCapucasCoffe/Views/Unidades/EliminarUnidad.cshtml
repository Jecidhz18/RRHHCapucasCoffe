@model RRHHCapucasCoffe.Models.Unidades.Unidad
@{
    ViewData["Title"] = "Eliminar Unidad";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Eliminar Unidad: @Model.UnidadDescripcion</h3>

        <form class="row g-3" asp-action="EliminarUnidadSelect">
            <input type="hidden" asp-for="UnidadId" />
            <span class="text-warning">Confirme la eliminación de los datos</span>
            <div class="col-12">
                <label asp-for="UnidadDescripcion" class="form-label"></label>
                <input asp-for="UnidadDescripcion" type="text" placeholder="" class="form-control">
                <span asp-validation-for="UnidadDescripcion" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="UnidadActiva" class="form-check-label"></label>
                    <input asp-for="UnidadActiva" class="form-check-input" type="checkbox">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Unidad", "Unidades")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
