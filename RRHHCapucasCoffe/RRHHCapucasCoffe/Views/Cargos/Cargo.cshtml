@model IEnumerable<RRHHCapucasCoffe.Models.Cargos.Cargo>
@{
    ViewData["Title"] = "Cargos";
}

<div class="card">

    <div class="card-header">
        <h5 class="card-title">Cargos</h5>
        <div class="d-flex justify-content-between">
            <div class="datatable-search d-inline">
                <input class="datatable-input" placeholder="buscar..." type="search" title="BuscarTabla" />
            </div>
            <div class="d-flex ">
                <button type="button" class="d-flex align-items-center btn btn-outline-primary" onclick="location.href='@Url.Action("CrearCargo", "Cargos")'">
                    <i class="bi bi-file-plus"></i>
                    <span class="mx-1 d-none d-md-block">Agregar</span>
                </button>
                <button type="button" class="mx-1 d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-pdf"></i>
                    <span class="mx-1 d-none d-md-block ">PDF</span>
                </button>
                <button type="button" class="d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-excel"></i>
                    <span class="mx-1 d-none d-md-block">Excel</span>
                </button>
            </div>
        </div>
    </div>

    <div class="card-body ">

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Cargo</th>
                        <th>Activo</th>
                        <th>Usuario Grabo</th>
                        <th>Fecha Grabo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cargo in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="EditarCargo" asp-route-cargoId="@cargo.CargoId" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="EliminarCargo" asp-route-cargoId="@cargo.CargoId" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td>
                                @cargo.CargoNombre
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" disabled checked="@cargo.CargoActivo">
                                </div>
                            </td>
                            <td>
                                @cargo.CUsuarioGrabo
                            </td>
                            <td>
                                @cargo.CargoFechaGrabo
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
