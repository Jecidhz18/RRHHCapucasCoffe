@model RRHHCapucasCoffe.Models.Cargos.Cargo
@{
    ViewData["Title"] = "Crear Cargo";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
    @*<i class="bi bi-exclamation-octagon flex"></i>*@
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Cargo</h3>

        <form class="row g-3" asp-action="CrearCargo">
            <div class="col-12">
                <label asp-for="CargoNombre" class="form-label"></label>
                <input asp-for="CargoNombre" type="text" placeholder="" class="form-control">
                <span asp-validation-for="CargoNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="CargoActivo" class="form-check-label"></label>
                    <input asp-for="CargoActivo" class="form-check-input" type="checkbox" checked>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary" title="Confirmar">Confirmar</button>
                <button type="reset" class="btn btn-secondary" onclick="location.href='@Url.Action("Cargo", "Cargos")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
