@model RRHHCapucasCoffe.Models.Remuneraciones.Remuneracion
@{
    ViewData["Title"] = "Eliminar Remuneración";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Eliminar Remuneración: @Model.RemuneracionDescripcion</h3>

        <form class="row g-3" asp-action="EliminarRemuneracionSelect">
            <input type="hidden" asp-for="RemuneracionId" />
            <span class="text-warning">Confirme la eliminación de los datos</span>
            <div class="col-12">
                <label asp-for="RemuneracionDescripcion" class="form-label"></label>
                <input asp-for="RemuneracionDescripcion" type="text" placeholder="" class="form-control" disabled>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="RemuneracionActiva" class="form-check-label"></label>
                    <input asp-for="RemuneracionActiva" class="form-check-input" type="checkbox" disabled>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger" title="Confirmar">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Remuneracion", "Remuneraciones")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>