@model IEnumerable<RRHHCapucasCoffe.Models.Remuneraciones.Remuneracion>

@{
    ViewData["Title"] = "Remuneración";
}

<div class="card">

    <div class="card-header">
        <h5 class="card-title">Remuneraciones</h5>
        <div class="d-flex justify-content-between">
            <div class="datatable-search d-inline">
                <input class="datatable-input" placeholder="buscar..." type="search" title="BuscarTabla" />
            </div>
            <div class="d-flex ">
                <button type="button" class="d-flex align-items-center btn btn-outline-primary" onclick="location.href='@Url.Action("CrearRemuneracion", "Remuneraciones")'">
                    <i class="bi bi-file-plus"></i>
                    <span class="mx-1 d-none d-md-block">Agregar</span>
                </button>
                <button type="button" class="mx-1 d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-pdf"></i>
                    <span class="mx-1 d-none d-md-block ">PDF</span>
                </button>
                <button type="button" class="d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-excel"></i>
                    <span class="mx-1 d-none d-md-block">Excel</span>
                </button>
            </div>
        </div>
    </div>

    <div class="card-body ">

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Remuneracion</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var remuneracion in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="EditarRemuneracion" asp-route-remuneracionId="@remuneracion.RemuneracionId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="EliminarRemuneracion" asp-route-remuneracionId="@remuneracion.RemuneracionId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td>
                                @remuneracion.RemuneracionDescripcion
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" checked="@remuneracion.RemuneracionActiva" disabled />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>