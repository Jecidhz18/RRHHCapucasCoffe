@model RRHHCapucasCoffe.Models.Profesiones.Profesion
@{
    ViewData["Title"] = "Eliminar Profesion";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Eliminar Profesión: @Model.ProfesionNombre</h3>

        <form class="row g-3" asp-action="EliminarProfesionSelect">
            <input type="hidden" asp-for="ProfesionId" />
            <span class="text-warning">Confirme la eliminación de los datos</span>
            <div class="col-12">
                <label asp-for="ProfesionNombre" class="form-label"></label>
                <input asp-for="ProfesionNombre" type="text" placeholder="" class="form-control" disabled>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="ProfesionActivo" class="form-check-label"></label>
                    <input asp-for="ProfesionActivo" class="form-check-input" type="checkbox" disabled>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger" title="Confirmar">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Profesion", "Profesiones")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>
