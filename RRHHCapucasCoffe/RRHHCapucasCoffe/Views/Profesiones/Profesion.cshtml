@model IEnumerable<RRHHCapucasCoffe.Models.Profesiones.Profesion>

@{
    ViewData["Title"] = "Profesion";
}

<div class="card">

    <div class="card-header">
        <h5 class="card-title mx-3 mt-2 py-0">Profesiones</h5>
        <div class="d-flex" id="container-buttons">
            <div class="p-1 flex-fill">
                <div class="d-flex d-flex justify-content-end dt-buttons">
                    <button type="submit" class="d-flex align-items-center btn btn-outline-primary mx-1" onclick="location.href='@Url.Action("CrearProfesion", "Profesiones")'" title="Agregar">
                        <span>
                            <i class="bi bi-file-plus d-block d-lg-none"></i>
                            <span class="mx-1 d-none d-lg-block">Agregar</span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body mt-3">

        <div class="table-responsive">
            <table class="table dataTable" id="datatable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Profesión</th>
                        <th>Activo</th>
                        <th>Creado por</th>
                        <th>Fecha Creación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profesion in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="EditarProfesion" asp-route-profesionId="@profesion.ProfesionId" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="EliminarProfesion" asp-route-profesionId="@profesion.ProfesionId" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td>
                                @profesion.ProfesionNombre
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" disabled checked="@profesion.ProfesionActivo">
                                </div>
                            </td>
                            <td>
                                @*@profesion.PUsuarioGrabo*@
                            </td>
                            <td>
                                @profesion.ProfesionFechaGrabo
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/table.js" asp-append-version="true"></script>
}
