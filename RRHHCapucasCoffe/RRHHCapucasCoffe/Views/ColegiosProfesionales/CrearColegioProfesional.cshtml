@model RRHHCapucasCoffe.Entities.ColegioProfesional
@{
    ViewData["Title"] = "Crear Colegio Profesional";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
    @*<i class="bi bi-exclamation-octagon flex"></i>*@
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Pais</h3>

        <form class="row g-3" asp-action="CrearColegioProfesional">
            <div class="col-12">
                <label asp-for="ColegioProfesionalNombre" class="form-label"></label>
                <input asp-for="ColegioProfesionalNombre" type="text" placeholder="" class="form-control">
                <span asp-validation-for="ColegioProfesionalNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="ColegioProfesionalActivo" class="form-check-label"></label>
                    <input asp-for="ColegioProfesionalActivo" class="form-check-input" type="checkbox" checked>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("ColegioProfesional", "ColegiosProfesionales")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
