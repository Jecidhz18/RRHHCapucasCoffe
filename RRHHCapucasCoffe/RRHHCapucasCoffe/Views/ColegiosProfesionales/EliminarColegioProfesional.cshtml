@model ColegioProfesional

@{
    ViewData["Title"] = "Eliminar Colegio Profesional";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Eliminar Colegio Profesional: @Model.ColegioProfesionalNombre</h3>

        <form class="row g-3" asp-action="EliminarColegioProfesionalSelect">
            <input type="hidden" asp-for="ColegioProfesionalId" />
            <span class="text-warning">Confirme la eliminación de los datos</span>
            <div class="col-12">
                <label asp-for="ColegioProfesionalNombre" class="form-label"></label>
                <input asp-for="ColegioProfesionalNombre" type="text" placeholder="" class="form-control" disabled>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="ColegioProfesionalActivo" class="form-check-label"></label>
                    <input asp-for="ColegioProfesionalActivo" class="form-check-input" type="checkbox" disabled>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("ColegioProfesional", "ColegiosProfesionales")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

