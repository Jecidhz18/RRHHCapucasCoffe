@model IEnumerable<RRHHCapucasCoffe.Models.ColegiosProfesionales.ColegioProfesional>

@{
    ViewData["Title"] = "Colegios Profesionales";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Colegios Profesionales</h5>
        <div class="d-flex justify-content-between">
            <div class="datatable-search d-inline">
                <input class="form-control border-secondary" placeholder="buscar..." type="search" />
            </div>
            <div class="d-flex ">
                <button type="button" class="d-flex align-items-center btn btn-outline-primary" onclick="location.href='@Url.Action("CrearColegioProfesional", "ColegiosProfesionales")'">
                    <i class="bi bi-file-plus"></i>
                    <span class="mx-1 d-none d-md-block">Agregar</span>
                </button>
                <button type="button" class="mx-1 d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-pdf"></i>
                    <span class="mx-1 d-none d-md-block ">PDF</span>
                </button>
                <button type="button" class="d-flex align-items-center btn btn-outline-primary">
                    <i class="bi bi-file-excel"></i>
                    <span class="mx-1 d-none d-md-block">Excel</span>
                </button>
            </div>
        </div>
    </div>

    <div class="card-body ">
        <div class="table-responsive">
            <table id="" class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Colegio Profesional</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var colegioProfesional in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="EditarColegioProfesional" asp-route-colegioProfesionalId="@colegioProfesional.ColegioProfesionalId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="EliminarColegioProfesional" asp-route-colegioProfesionalId="@colegioProfesional.ColegioProfesionalId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td>
                                @colegioProfesional.ColegioProfesionalNombre
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" disabled checked="@colegioProfesional.ColegioProfesionalActivo">
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>