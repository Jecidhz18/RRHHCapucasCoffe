@model RRHHCapucasCoffe.Entities.Banco
@{
    ViewData["Title"] = "Eliminar Banco";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Eliminar Banco: @Model.BancoNombre</h3>

        <form class="row g-3" asp-action="EliminarBancoSelect">
            <input type="hidden" asp-for="BancoId" />
            <span class="text-warning">Confirme la eliminación de los datos</span>
            <div class="col-12">
                <label asp-for="BancoNombre" class="form-label"></label>
                <input asp-for="BancoNombre" type="text" placeholder="" class="form-control" disabled>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="BancoActivo" class="form-check-label"></label>
                    <input asp-for="BancoActivo" class="form-check-input" type="checkbox" disabled>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger" title="Confirmar">Confirmar</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Banco", "Bancos")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>
