@model DeptoCrearViewModel

@{
    ViewData["Title"] = "Crear Departamento";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Departamento</h3>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <ul id="errorList"></ul>
        </div>


        <form class="row g-3" asp-action="CrearDepartamento">
            <div class="col-12">
                <label asp-for="DepartamentoNombre" class="form-label"></label>
                <input asp-for="DepartamentoNombre" type="text" class="form-control">
                <span asp-validation-for="DepartamentoNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="DepartamentoActivo" class="form-check-label"></label>
                    <input asp-for="DepartamentoActivo" class="form-check-input" type="checkbox" checked>
                </div>
            </div>
            <div>
                <span class="card-subtitle">País al que pertenece el departamento:</span>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">Pais</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="data-table-body">
                        <tr>
                            <td>
                                @*<button asp-action="CrearDep" onclick="eliminarFila(this)" class="bi bi-trash btn btn-outline-danger"></button>*@
                            </td>
                            <td>
                                <select id="listselect"  asp-items="Model.Paises" class="form-select" aria-label="Default select example">
                                    @*<option value="" disabled selected hidden>Seleccione una opctión</option>*@
                                </select>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" class="text-center">
                                <a onclick="agregarFila()" class="btn btn-outline-primary">Añadir fila</a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Departamento", "Departamentos")'">Cancelar</button>
            </div>
        </form>
    </div>
</div>
