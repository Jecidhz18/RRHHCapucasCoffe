@model RRHHCapucasCoffe.Models.Municipios.Municipio
@{
    ViewData["Title"] = "Crear Municipio";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Municipio</h3>

        <form class="row g-3" asp-action="CrearMunicipio">
            <div class="col-12">
                <label asp-for="DivisionPoliticaMunicipioNombre" class="form-label"></label>
                <input asp-for="DivisionPoliticaMunicipioNombre" type="text" class="form-control">
                <span asp-validation-for="DivisionPoliticaMunicipioNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                @*<div class="form-check">
                    <label class="form-check-label" for="gridCheck1">Activo</label>
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                </div>*@

                <div class="form-check form-switch">
                <label asp-for="DivisionPoliticaMunicipioActivo" class="form-check-label"></label>
                <input asp-for="DivisionPoliticaMunicipioActivo" class="form-check-input" type="checkbox">
                </div>
            </div>

            <div>
                <span>País y departamento al que pertenece el municipio:</span>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Pais</th>
                            <th scope="col">Departamento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>

                            </th>
                            <th>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Selecciona un pais</option>
                                </select>
                            </th>
                            <th>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Selecciona un departamento</option>
                                </select>
                            </th>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <button type="reset" class="btn btn-secondary">Limpiar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}