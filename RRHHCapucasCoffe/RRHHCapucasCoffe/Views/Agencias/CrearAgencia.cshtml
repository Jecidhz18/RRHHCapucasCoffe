@model RRHHCapucasCoffe.Models.Agencias.AgenciaCrearViewModel

@{
    ViewData["Title"] = "Crear Agencia";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Crear Agencia</h3>

        <form class="row g-3" asp-action="CrearAgencia" onsubmit="return validateFormAgencia()">
            <div class="col-12">
                <label asp-for="AgenciaNombre" class="form-label"></label>
                <input asp-for="AgenciaNombre" type="text" placeholder="" class="form-control">
                <span asp-validation-for="AgenciaNombre" class="text-danger"></span>
                <span id="validation-agenciaNombre" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <label asp-for="AgenciaActiva" class="form-check-label"></label>
                    <input asp-for="AgenciaActiva" class="form-check-input" type="checkbox" checked>
                </div>
            </div>
            <div class="accordion accordion-flush" id="accordionFlush">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button id="accordion-button-unidad" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-unidad" aria-expanded="false" aria-controls="flush-collapse-unidad">
                            Unidades:
                        </button>
                    </h2>
                    <div id="flush-collapse-unidad" class="accordion-collapse collapse" aria-labelledby="flush-collapse-unidad" data-bs-parent="#accordionFlush">
                        <div class="accordion-body">
                            <div class="row">
                                <div class="col">
                                    <select class="form-select select2" id="select-unidad" asp-items="@Model.Unidades">
                                        <option selected>Seleccione una opción</option>
                                    </select>
                                    <div>
                                        <span id="validation-unidad-select" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button type="button" onclick="addUnidad()" class="d-flex align-items-center btn btn-outline-primary mx-1" title="Agregar">
                                        <span>
                                            <i class="bi bi-file-plus d-block d-lg-none"></i>
                                            <span class="mx-1 d-none d-lg-block">Agregar</span>
                                        </span>
                                    </button>
                                </div>
                                <div class="row justify-content-center table-responsive mt-1">
                                    <table class="table col-12 mb-1">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Unidad</th>
                                            </tr>
                                        </thead>
                                        <tbody id="data-table-body"> 
                                            <tr id="validation-row" class="visually-hidden">
                                                <td></td>
                                                <td><span id="validation-unidad-table" class="text-danger"></span></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary" title="Confirmar">Confirmar</button>
                <button type="reset" class="btn btn-secondary" onclick="location.href='@Url.Action("Agencia", "Agencias")'" title="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/agencia.js" asp-append-version="true"></script>
}